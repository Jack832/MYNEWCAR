<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#e8e9ed"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/testDrive"
        layout="@layout/app_bar">
    </include>
    <RelativeLayout
        android:layout_below="@id/testDrive"
        android:padding="7dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/driveTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
    <TextView
        android:padding="9dp"
        android:background="#b2c8de"
        android:id="@+id/txt"
        android:layout_below="@id/driveTest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Car first"/>
    <Spinner
        android:padding="7dp"
        android:layout_below="@+id/txt"
        android:id="@+id/selectfuel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageButton
        android:layout_below="@+id/selectfuel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/calender"
        android:id="@+id/datePicker"/>
    <EditText
       android:id="@+id/editTextDate"
        android:hint="Select Drive Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/datePicker"
        android:layout_toEndOf="@+id/datePicker" />
    <EditText
        android:id="@+id/name"
        android:layout_below="@id/editTextDate"
        android:hint="Full Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/email"
        android:layout_below="@id/name"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/phone"
        android:layout_below="@id/email"
        android:hint="Phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/location"
        android:layout_below="@id/phone"
        android:hint="Location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_below="@id/location"
        android:layout_width="match_parent"
        android:id="@+id/submit"
        android:text="Submit"
        android:background="#cf411e"
        android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
</ScrollView>
